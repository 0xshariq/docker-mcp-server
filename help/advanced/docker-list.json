{
  "name": "docker-list",
  "aliases": ["dlist"],
  "category": "Advanced Information Display",
  "description": "Comprehensive Docker object listing with advanced filtering and formatting",
  "usage": "docker-list [object-type] [options]",
  "examples": [
    {
      "command": "dlist",
      "description": "List all Docker objects (containers, images, networks, volumes)"
    },
    {
      "command": "dlist containers",
      "description": "List containers with detailed information"
    },
    {
      "command": "dlist images --format table",
      "description": "List images in table format"
    },
    {
      "command": "dlist --running",
      "description": "List only running containers"
    },
    {
      "command": "dlist --filter label=env=production",
      "description": "List objects with specific labels"
    },
    {
      "command": "dlist --size",
      "description": "Include size information in listings"
    },
    {
      "command": "dlist --export json",
      "description": "Export listing to JSON format"
    },
    {
      "command": "dlist --help",
      "description": "Show this help message"
    }
  ],
  "object_types": [
    "containers - List containers with status and ports",
    "images - List images with size and creation date",
    "networks - List networks with driver and scope",
    "volumes - List volumes with driver and mount point",
    "services - List Docker Swarm services",
    "nodes - List Docker Swarm nodes",
    "secrets - List Docker secrets",
    "configs - List Docker configs",
    "all - List all object types (default)"
  ],
