{
  "name": "docker-bridge",
  "aliases": ["dbridge"],
  "category": "Advanced Networking",
  "description": "Manage Docker bridge networks for container communication",
  "usage": "docker-bridge [action] [network-name] [options]",
  "examples": [
    {
      "command": "dbridge",
      "description": "List all bridge networks"
    },
    {
      "command": "dbridge create my-bridge",
      "description": "Create a new bridge network named 'my-bridge'"
    },
    {
      "command": "dbridge connect my-bridge my-container",
      "description": "Connect container to bridge network"
    },
    {
      "command": "dbridge disconnect my-bridge my-container",
      "description": "Disconnect container from bridge network"
    },
    {
      "command": "dbridge inspect my-bridge",
      "description": "Show detailed information about bridge network"
    },
    {
      "command": "dbridge remove my-bridge",
      "description": "Remove bridge network"
    },
    {
      "command": "dbridge --help",
      "description": "Show this help message"
    }
  ],
  "actions": [
    "create - Create new bridge network",
    "connect - Connect container to bridge",
    "disconnect - Disconnect container from bridge",
    "inspect - Show bridge network details",
    "remove - Delete bridge network",
    "list - List all bridge networks (default)"
  ],
  "options": [
    {
      "flag": "--driver <driver>",
      "description": "Network driver (bridge is default)"
    },
    {
      "flag": "--subnet <subnet>",
      "description": "Subnet in CIDR format (e.g., 172.20.0.0/16)"
    },
    {
      "flag": "--gateway <gateway>",
      "description": "IPv4 or IPv6 gateway for subnet"
    },
    {
      "flag": "--ip-range <ip-range>",
      "description": "Allocate container ip from sub-range"
    },
    {
      "flag": "--label <label>",
      "description": "Set metadata on network"
    },
    {
      "flag": "--attachable",
      "description": "Enable manual container attachment"
    },
    {
      "flag": "--internal",
      "description": "Restrict external access to network"
    },
    {
      "flag": "--ipv6",
      "description": "Enable IPv6 networking"
    },
    {
      "flag": "-f, --force",
      "description": "Force network removal"
    },
    {
      "flag": "-h, --help",
      "description": "Show this help message"
    }
  ],
  "bridge_concepts": [
    "Default Bridge - docker0 network created automatically",
    "Custom Bridge - User-defined bridge with DNS resolution",
    "Network Isolation - Containers on different bridges can't communicate",
    "Port Binding - Map container ports to host ports",
    "DNS Resolution - Custom bridges provide automatic service discovery"
  ],
  "use_cases": [
    "🔗 Multi-container applications needing internal communication",
    "🏗️ Microservices architecture with service isolation",
    "🧪 Development environments with multiple services",
    "🔒 Secure networks with restricted external access",
    "📱 Load balancer setups with backend services"
  ],
  "best_practices": [
    "✅ Use custom bridges for better DNS resolution",
    "✅ Plan subnet ranges to avoid conflicts",
    "✅ Use meaningful network names",
    "✅ Document network topology for team",
    "❌ Don't use default bridge for production"
  ],
  "notes": [
    "💡 Custom bridges provide better isolation than default bridge",
    "🔧 Containers can belong to multiple networks simultaneously",
    "📊 Use 'docker network ls' to see all networks",
    "⚡ Bridge networks only work on single Docker host"
  ]
}
