{
  "name": "docker-exec",
  "aliases": ["dexec"],
  "category": "Basic Container Operations", 
  "description": "Execute commands in a running Docker container",
  "usage": "docker-exec <containerId> <command> [options]",
  "examples": [
    {
      "command": "dexec mycontainer bash",
      "description": "Open bash shell in container"
    },
    {
      "command": "dexec mycontainer ls -la /app",
      "description": "List files in /app directory"
    },
    {
      "command": "dexec --interactive --tty mycontainer bash",
      "description": "Open interactive bash with TTY"
    },
    {
      "command": "dexec --user root mycontainer whoami",
      "description": "Execute command as root user"
    },
    {
      "command": "dexec --help",
      "description": "Show this help message"
    }
  ],
  "options": [
    {
      "flag": "-i, --interactive",
      "description": "Keep STDIN open even if not attached"
    },
    {
      "flag": "-t, --tty",
      "description": "Allocate a pseudo-TTY"
    },
    {
      "flag": "-it",
      "description": "Interactive with TTY (common combination)"
    },
    {
      "flag": "-d, --detach",
      "description": "Run command in background"
    },
    {
      "flag": "-u, --user <user>",
      "description": "Username or UID (format: <name|uid>[:<group|gid>])"
    },
    {
      "flag": "-w, --workdir <dir>",
      "description": "Working directory inside the container"
    },
    {
      "flag": "-e, --env <VAR>=<value>",
      "description": "Set environment variables"
    },
    {
      "flag": "--privileged",
      "description": "Give extended privileges to the command"
    },
    {
      "flag": "-h, --help",
      "description": "Show this help message"
    }
  ],
  "common_commands": [
    "bash, sh - Open shell",
    "ls -la - List files",
    "ps aux - List processes",
    "cat /etc/os-release - Show OS info",
    "env - Show environment variables",
    "whoami - Show current user",
    "pwd - Show current directory"
  ],
  "notes": [
    "ðŸ’¡ Container must be running to execute commands",
    "ðŸ”§ Use -it flags for interactive commands like bash or sh",
    "ðŸ‘¤ Default user is the one specified in container image",
    "âš¡ Use container name or ID - both work"
  ]
}
